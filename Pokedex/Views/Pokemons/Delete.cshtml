@model Application.ViewModels.SavePokemonViewModel
@{
    ViewData["Title"] = "DeletePokemon";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Estas seguro que quieres eliminar el pokemon @Model.Name ?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Pokemons" asp-action="DeletePost">
                    <input type="hidden" asp-for="Id" />

                    <button class="btn btn-danger" type="submit">Eliminar</button>
                    <a class="btn btn-warning text-light" asp-controller="Pokemons" asp-action="Index">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

